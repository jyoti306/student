<% layout('layouts/boilerplate.ejs') %>
    <form method="post" action="/new" class="col-4 offset-4 mt-4 needs-validation" novalidate>
        <div >
            <label for="a8" class="form-label"> Name </label>
            <input placeholder="enter your name" name="name" id="a8" class="form-control" required>
            <div class="invalid-feedback">
                Please enter your name should not be empty.
            </div>
        </div>
        <div>
            <label for="a2" class="form-label"> Age </label>
            <input placeholder="enter your age" name="age" id="a2" class="form-control" required>
             <div class="invalid-feedback">
                Please enter your Name should not be empty.
            </div>
        </div>
        <div>
            <label for="a3" class="form-label"> City </label>
            <input placeholder="enter your city" name="city" id="a3" class="form-control" required>
             <div class="invalid-feedback">
                Please enter your City should not be empty.
            </div>
        </div>
        <div>
            <label for="a4" class="form-label"> Email </label>
        <input placeholder="enter your email" name="email" id="a4" class="form-control" required>
         <div class="invalid-feedback">
                Please enter your Email should not be empty.
            </div>
        </div>
        <div>
                    <label for="a5" class="form-label"> Father's Name </label>
        <input placeholder="enter your fatherName" name="father_name" id="a5" class="form-control" required>
         <div class="invalid-feedback">
                Please enter your Father_name should not be empty.
            </div>
        </div>
        <div>
            <label for="a6" class="form-label"> Contact </label>
        <input placeholder="enter your contact" name="contact" id="a6" class="form-control" required>
         <div class="invalid-feedback">
                Please enter your Contact should not be empty.
            </div>
        </div>
        <br>
        <button class="btn btn-success"> Submit </button>
    </form>
